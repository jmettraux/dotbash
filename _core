if [ "$TERM" = "xterm" ]; then
  TERM="xterm-256color"
fi

export HISTCONTROL=ignoreboth
  # which comprises `ignoredups` and `ignorespaces`


#
# grep

export GREP_OPTIONS='--color=auto'

alias gr='grep -R -n --exclude-dir=.git'

function ak() {
  if [ $# -eq 1 ]; then
    grep -R -n --exclude-dir=.git -E "$@" .
  else
    grep -R -n --exclude-dir=.git -E "$@"
  fi
}

