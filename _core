_LSCOL=''
if [ `uname` == 'Linux' ]; then
  #_LSCOL='--color'
  _LSCOL='--color=auto'
elif [ `uname` == 'Darwin' ]; then
  _LSCOL='-G'
fi

alias ll="ls -al ${_LSCOL}"
alias lh="ls -alh ${_LSCOL}"
alias llh="ls -alh ${_LSCOL}"
alias la="ls -A ${_LSCOL}"
alias l="ls -CF ${_LSCOL}"
alias t='tree'
alias th='tree -h'


